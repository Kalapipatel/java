import java.util.*;

public class rough {

    public static double circumference(Double a){
        
        double k = 2*a*3.14 ;
        return k;
    }
     

    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        
        double r = sc.nextDouble();

        System.out.println(circumference(r));
    }
}
