import java.util.*;

public class rough {

    public static void avg(){
        Scanner sc = new Scanner(System.in);
        System.out.println("how many number's avrage??");
        int n = sc.nextInt();
        
        int add=0;
        System.out.println("Enter the n numbers");
        for(int i=1; i<=n; i++){
            int z = sc.nextInt();
            add += z;
        }

        int avrage = add/n ;
        System.out.println("The average of the numbers is : "+avrage);
    }
     

    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);

        avg();
    }
}
